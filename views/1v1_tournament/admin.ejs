        // ===== UPDATE PLAYER STATS =====
        async function updatePlayerStats() {
            if (!currentEditingPlayer || !adminCredentials) {
                showAlert('‚ùå Session expired. Please login again.', 'danger');
                return;
            }

            const ratingDeduction = parseInt(document.getElementById('ratingDeduction').value) || 0;
            const gsDeduction = parseInt(document.getElementById('gsDeduction').value) || 0;
            const gcDeduction = parseInt(document.getElementById('gcDeduction').value) || 0;
            if (ratingDeduction === 0 && gsDeduction === 0 && gcDeduction === 0) {
                showAlert('‚ùå Please enter at least one deduction value', 'danger');
                return;
            }

            try {
                console.log(`üîÑ Updating stats for ${currentEditingPlayer.email}`);
                console.log('üìç API URL:', `${API_BASE_URL}/admin/update-player-stats`);
                
                const response = await axios.post(`${API_BASE_URL}/admin/update-player-stats`, {
                    adminID: adminCredentials.adminID,
                    adminPass: adminCredentials.adminPass,
                    email: currentEditingPlayer.email,
                    ratingDeduction,
                    gsDeduction,
                    gcDeduction,
                    reason: 'Admin adjustment'
                });

                if (response.data.success) {
                    showAlert(`‚úÖ ${currentEditingPlayer.name}'s stats updated successfully!`, 'success');
                    console.log('‚úÖ Stats updated');
                    console.log('üìä Response:', response.data.data);
                    editModal.hide();
                    loadLeaderboard();
                }
            } catch (error) {
                console.error('‚ùå Update error:', error);
                console.error('üìä Error response:', error.response?.data);
                
                if (error.response?.status === 403) {
                    showAlert('‚ùå Invalid credentials. Session expired.', 'danger');
                } else if (error.code === 'ERR_NETWORK') {
                    showAlert('‚ùå Connection error. Backend server may be down.', 'danger');
                } else {
                    showAlert('‚ùå Failed to update player stats. Please try again.', 'danger');
                }
            }
        }

        // ===== SHOW ALERT =====
        function showAlert(message, type) {
            const alertBox = document.getElementById('alertBox');
            alertBox.className = `alert-box alert-${type} show`;
            alertBox.innerHTML = message;
            alertBox.style.display = 'block';

            setTimeout(() => {
                alertBox.classList.remove('show');
                alertBox.style.display = 'none';
            }, 5000);
        }

        // ===== LOGOUT =====
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                adminCredentials = null;
                currentEditingPlayer = null;
                document.getElementById('loginSection').style.display = 'flex';
                document.getElementById('navbar').style.display = 'none';
                document.getElementById('dashboardContainer').classList.remove('show');
                document.getElementById('adminID').value = '';
                document.getElementById('adminPass').value = '';
                showAlert('‚úÖ Logged out successfully', 'success');
                console.log('‚úÖ Admin logged out');
            }
        }

        // ===== SEARCH FUNCTION =====
        function handleEmailSearch() {
            const searchQuery = document.getElementById('emailSearch').value.toLowerCase().trim();
            
            if (searchQuery === '') {
                // Reset to show all players
                renderCurrentPage();
                document.getElementById('paginationContainer').style.display = 'flex';
                return;
            }
            
            // Filter players by email OR name
            const filteredPlayers = allPlayers.filter(player => 
                player.email.toLowerCase().includes(searchQuery) ||
                player.name.toLowerCase().includes(searchQuery)
            );
            
            if (filteredPlayers.length === 0) {
                document.getElementById('noData').style.display = 'block';
                document.getElementById('tableContainer').style.display = 'none';
                document.getElementById('paginationContainer').style.display = 'none';
            } else {
                document.getElementById('noData').style.display = 'none';
                document.getElementById('tableContainer').style.display = 'block';
                document.getElementById('paginationContainer').style.display = 'none';
                renderLeaderboard(filteredPlayers);
            }
        }

        // ===== PAGINATION FUNCTIONS =====
        function renderCurrentPage() {
            const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
            const endIndex = Math.min(startIndex + ITEMS_PER_PAGE, allPlayers.length);
            const currentPlayers = allPlayers.slice(startIndex, endIndex);
            
            renderLeaderboard(currentPlayers);
        }

        function updatePagination() {
            const startIndex = (currentPage - 1) * ITEMS_PER_PAGE;
            const endIndex = Math.min(startIndex + ITEMS_PER_PAGE, allPlayers.length);
            
            // Update pagination info
            document.getElementById('showingStart').textContent = startIndex + 1;
            document.getElementById('showingEnd').textContent = endIndex;
            document.getElementById('totalPlayersCount').textContent = allPlayers.length;
            
            // Update pagination buttons
            const paginationList = document.getElementById('paginationList');
            const prevPage = document.getElementById('prevPage');
            const nextPage = document.getElementById('nextPage');
            
            // Clear existing page numbers
            const existingPages = paginationList.querySelectorAll('.page-number-item');
            existingPages.forEach(item => item.remove());
            
            // Update prev/next button states
            prevPage.classList.toggle('disabled', currentPage === 1);
            nextPage.classList.toggle('disabled', currentPage === totalPages);
            
            // Generate page numbers
            const maxVisiblePages = 5;
            let startPage = Math.max(1, currentPage - Math.floor(maxVisiblePages / 2));
            let endPage = Math.min(totalPages, startPage + maxVisiblePages - 1);
            
            if (endPage - startPage + 1 < maxVisiblePages) {
                startPage = Math.max(1, endPage - maxVisiblePages + 1);
            }
            
            // Add page numbers
            for (let i = startPage; i <= endPage; i++) {
                const pageItem = document.createElement('li');
                pageItem.className = `page-item page-number-item ${i === currentPage ? 'active' : ''}`;
                pageItem.innerHTML = `
                    <a class="page-link page-number" href="#" onclick="goToPage(${i})">${i}</a>
                `;
                nextPage.parentNode.insertBefore(pageItem, nextPage);
            }
        }

        function goToPage(page) {
            if (page < 1 || page > totalPages || page === currentPage) return;
            
            currentPage = page;
            renderCurrentPage();
            updatePagination();
            
            // Scroll to top of table
            document.getElementById('tableContainer').scrollIntoView({ behavior: 'smooth' });
        }

        // ===== UTILITY: ESCAPE HTML =====
        function escapeHtml(text) {
            const map = {
                '&': '&amp;',
                '<': '&lt;',
                '>': '&gt;',
                '"': '&quot;',
                "'": '&#039;'
            };
            return text.replace(/[&<>"']/g, m => map[m]);
        }
