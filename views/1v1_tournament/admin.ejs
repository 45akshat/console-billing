    <script>
        // ===== DYNAMIC API BASE URL CONFIGURATION =====
        const ITEMS_PER_PAGE = 20;
        const API_BASE_URL = 
            window.location.hostname === "localhost" || window.location.hostname === "127.0.0.1"
                ? "http://localhost:5000/match"
                : "https://api.consolegaming.in/match"; // Update for production
        
        console.log('üîó API Base URL:', API_BASE_URL);
        
        // ===== STATE MANAGEMENT =====
        let adminCredentials = null;
        let currentEditingPlayer = null;
        let editModal = null;
        let isLoading = false;
        let allPlayers = [];
        let currentPage = 1;
        let totalPages = 1;

        // ===== INITIALIZATION =====
        document.addEventListener('DOMContentLoaded', () => {
            editModal = new bootstrap.Modal(document.getElementById('editModal'));
            console.log('‚úÖ Admin Dashboard Initialized');
            console.log('üåê Hostname:', window.location.hostname);
        });

        // ===== FORM SUBMISSION =====
        function handleLogin(event) {
            event.preventDefault();
            loginAdmin();
        }

        // ===== LOGIN FUNCTION =====
        async function loginAdmin() {
            const adminID = document.getElementById('adminID').value.trim();
            const adminPass = document.getElementById('adminPass').value.trim();

            if (!adminID || !adminPass) {
                showAlert('‚ùå Please enter both Admin ID and Password', 'danger');
                return;
            }

            try {
                console.log('üîê Attempting admin login...');
                console.log('üìç API URL:', `${API_BASE_URL}/admin/login`);
                
                const response = await axios.post(`${API_BASE_URL}/admin/login`, {
                    adminID: adminID,
                    adminPass: adminPass
                });

                if (response.data.success) {
                    adminCredentials = { adminID, adminPass };
                    document.getElementById('loginSection').style.display = 'none';
                    document.getElementById('navbar').style.display = 'block';
                    document.getElementById('dashboardContainer').classList.add('show');
                    
                    showAlert('‚úÖ Login successful! Welcome Admin!', 'success');
                    console.log('‚úÖ Admin authenticated');
                    
                    loadLeaderboard();
                }
            } catch (error) {
                console.error('‚ùå Login error:', error);
                console.error('üìä Error response:', error.response?.data);
                
                if (error.response?.status === 403 || error.response?.status === 401) {
                    showAlert('‚ùå Invalid Admin ID or Password', 'danger');
                } else if (error.code === 'ERR_NETWORK') {
                    showAlert('‚ùå Connection error. Backend server may be down.', 'danger');
                } else {
                    showAlert('‚ùå Connection error. Please check your credentials.', 'danger');
                }
            }
        }

        // ===== LOAD LEADERBOARD =====
        async function loadLeaderboard() {
            if (!adminCredentials) return;

            if (isLoading) return;
            isLoading = true;

            document.getElementById('loading').classList.add('show');
            document.getElementById('tableContainer').style.display = 'none';
            document.getElementById('noData').style.display = 'none';

            try {
                console.log('üìä Loading leaderboard...');
                console.log('üìç API URL:', `${API_BASE_URL}/admin/leaderboard`);
                
                const response = await axios.post(`${API_BASE_URL}/admin/leaderboard`, {
                    adminID: adminCredentials.adminID,
                    adminPass: adminCredentials.adminPass
                });

                if (response.data.success) {
                    allPlayers = response.data.players;
                    totalPages = Math.ceil(allPlayers.length / ITEMS_PER_PAGE);
                    
                    // Update stats
                    document.getElementById('totalPlayers').textContent = allPlayers.length;
                    if (allPlayers.length > 0) {
                        const topPlayer = allPlayers[0];
                        document.getElementById('topRating').textContent = topPlayer.rating;
                        document.getElementById('topPlayerName').textContent = topPlayer.name;
                        document.getElementById('topPlayerEmail').textContent = topPlayer.email;
                    }
                    
                    // Format date and time in requested format: Nov 7, 2025 06:38:45 PM
                    const now = new Date();
                    const dateString = now.toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                    });
                    const timeString = now.toLocaleTimeString('en-US', {
                        hour: '2-digit',
                        minute: '2-digit',
                        second: '2-digit',
                        hour12: true
                    });
                    const dateTimeString = `${dateString} ${timeString}`;
                    document.getElementById('lastUpdated').textContent = dateTimeString;

                    // Render data
                    if (allPlayers.length === 0) {
                        document.getElementById('noData').style.display = 'block';
                        document.getElementById('paginationContainer').style.display = 'none';
                    } else {
                        renderCurrentPage();
                        document.getElementById('tableContainer').style.display = 'block';
                        document.getElementById('paginationContainer').style.display = 'flex';
                        updatePagination();
                    }

                    console.log(`‚úÖ Loaded ${allPlayers.length} players`);
                }
            } catch (error) {
                console.error('‚ùå Load error:', error);
                console.error('üìä Error response:', error.response?.data);
                
                if (error.response?.status === 403) {
                    showAlert('‚ùå Session expired. Please login again.', 'danger');
                } else if (error.code === 'ERR_NETWORK') {
                    showAlert('‚ùå Connection error. Backend server may be down.', 'danger');
                } else {
                    showAlert('‚ùå Failed to load leaderboard. Please try again.', 'danger');
                }
            } finally {
                document.getElementById('loading').classList.remove('show');
                isLoading = false;
            }
        }

        // ===== RENDER LEADERBOARD TABLE =====
        function renderLeaderboard(players) {
            const tbody = document.getElementById('leaderboardBody');
            tbody.innerHTML = '';

            players.forEach(player => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="player-rank">#${player.rank}</td>
                    <td class="player-name">${escapeHtml(player.name)}</td>
                    <td class="player-email">${escapeHtml(player.email)}</td>
                    <td class="player-rating">${player.rating}</td>
                    <td>${player.gs}</td>
                    <td>${player.gc}</td>
                    <td>${player.mp}</td>
                    <td>${player.mw}</td>
                    <td>${player.winPercentage}%</td>
                    <td>${escapeHtml(player.city)}</td>
                    <td>
                        <button class="btn-edit" onclick="openEditModal('${escapeHtml(player.email)}', '${escapeHtml(player.name)}', ${player.rating}, ${player.gs}, ${player.gc})">
                            <i class="fas fa-edit"></i> Edit
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });

            console.log(`üìã Rendered ${players.length} player rows`);
        }

        // ===== OPEN EDIT MODAL =====
        // ===== OPEN EDIT MODAL =====
function openEditModal(email, name, rating, gs, gc) {
  currentEditingPlayer = { email, name, rating, gs, gc };

  const preview = `
