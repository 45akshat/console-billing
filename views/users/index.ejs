<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Users Data</title>
  <link rel="stylesheet" href="/users/wallet.css">
  <style>
    #totalBalance {
      text-align: center;
      font-size: 1.5em;
      font-weight: bold;
      color: #000000;
      margin-bottom: 20px;
    }

    #searchBar {
      margin: 20px;
      text-align: center;
    }

    #loadMoreBtn {
      display: block;
      margin: 20px auto;
      padding: 10px 20px;
      font-size: 1em;
      cursor: pointer;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: center;
      border: 1px solid #ccc;
    }
  </style>
</head>
<body>
  <h1 style="text-align: center;">Users Data</h1>
  <div id="totalBalance">Total Wallet Balance: Loading...</div>

  <!-- Search Bar -->
  <div id="searchBar">
    <input type="text" id="searchInput" placeholder="Search by name or UserID">
    <button onclick="resetAndLoadUsers()">Search</button>
  </div>

  <!-- Users Table -->
  <table>
    <thead>
      <tr>
        <th>UserID</th>
        <th>Name</th>
        <th>Wallet Info</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="usersTableBody"></tbody>
  </table>

  <!-- Load More Button -->
  <button id="loadMoreBtn" onclick="loadUsers()">Load More</button>

  <script>
    let page = 1;
    let search = '';
    let hasMore = true;

    function showSuccessPopup() {
      alert('User wallet updated successfully');
    }

    async function fetchTotalBalance() {
      try {
        const response = await fetch('/users/wallets/totalBalance');
        const data = await response.json();
        if (response.ok) {
          document.getElementById('totalBalance').innerText = `Total Wallet Balance: ${data.totalBalance}`;
        } else {
          console.error('Error fetching total balance:', data.message);
        }
      } catch (error) {
        console.error('Error fetching total balance:', error);
      }
    }

    async function loadUsers() {
      if (!hasMore) return;

      const response = await fetch(`/users/paginated?search=${encodeURIComponent(search)}&page=${page}&limit=10`);
      const data = await response.json();

      data.users.forEach(user => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${user.UserID}</td>
          <td>${user.Name}</td>
          <td>${JSON.stringify(user.Wallet_Info)}</td>
          <td>
            <form onsubmit="event.preventDefault(); updateWallet('${user.UserID}')">
              <input type="text" name="Wallet_Info" id="wallet_${user.UserID}" value='${JSON.stringify(user.Wallet_Info)}'>
              <button type="submit">Update Wallet</button>
            </form>
          </td>
        `;
        document.getElementById('usersTableBody').appendChild(row);
      });

      hasMore = data.hasMore;
      if (!hasMore) {
        document.getElementById('loadMoreBtn').style.display = 'none';
      }

      page++;
    }

    function resetAndLoadUsers() {
      search = document.getElementById('searchInput').value;
      page = 1;
      hasMore = true;
      document.getElementById('usersTableBody').innerHTML = '';
      document.getElementById('loadMoreBtn').style.display = 'block';
      loadUsers();
    }

    async function updateWallet(userID) {
      const walletInfo = document.getElementById(`wallet_${userID}`).value;
      const response = await fetch(`/users/users/${userID}/wallet`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ Wallet_Info: walletInfo })
      });

      if (response.ok) {
        showSuccessPopup();
      } else {
        alert('Error updating wallet');
      }
    }

    // On page load
    window.onload = () => {
      fetchTotalBalance();
      loadUsers();
    };
  </script>
</body>
</html>
