<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Tournaments</title>
  <link rel="stylesheet" href="/sessions/all.css" />
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
      display: flex;
      background-color: #f4f4f4;
    }

    /* Sidebar */
    .side-menu {
      position: fixed;
      top: 0;
      left: 0;
      width: 200px;
      height: 100%;
      background: #333;
      color: #fff;
      padding: 20px;
    }

    .side-menu nav ul {
      list-style: none;
      padding: 0;
    }

    .side-menu nav ul li {
      margin-bottom: 10px;
    }

    .side-menu nav ul li a {
      color: #fff;
      text-decoration: none;
      display: flex;
      align-items: center;
    }

    .side-menu nav ul li a i {
      margin-right: 10px;
    }

    .side-menu nav ul li a.active {
      font-weight: bold;
    }

    /* Main content */
    main {
      margin-left: 220px;
      padding: 20px;
      flex-grow: 1;
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
    }

    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: center;
    }

    .card {
      width: 280px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      transition: transform 0.2s ease;
      text-decoration: none;
      color: inherit;
    }

    .card:hover {
      transform: scale(1.03);
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
    }

    .card-body {
      padding: 15px;
    }

    .card-title {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .card-text {
      font-size: 14px;
      color: #555;
      margin-bottom: 10px;
    }

    .card-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 15px;
      background-color: #f1f1f1;
      font-size: 14px;
    }

    .cost {
      font-weight: bold;
      color: #28a745;
    }

    .timestamp {
      color: #999;
    }
  </style>
</head>
<body>

  <!-- Sidebar -->
  <aside class="side-menu">
    <nav>
      <ul>
        <li><a href="/"><i class="fas fa-tachometer-alt"></i> Dashboard</a></li>
        <li><a href="/sessions/scan"><i class="fas fa-qrcode"></i> Scan QR</a></li>
        <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
        <li><a href="/sessions/create"><i class="fas fa-plus-circle"></i> Create Session</a></li>
        <li><a href="/sessions/all"><i class="fas fa-list"></i> All Sessions</a></li>
        <li><a href="/cashlogs/create"><i class="fas fa-money-bill-wave"></i> Create Cash Log</a></li>
        <li><a href="/cashlogs/all"><i class="fas fa-file-alt"></i> All Cash Logs</a></li>
        <li><a href="/tournament/view" class="active"><i class="fas fa-trophy"></i> Tournaments</a></li>
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <main>
    <h1>All Tournaments</h1>

    <div class="container">
      <% tournaments.forEach(tournament => { %>
        <a href="/tournament/<%= tournament._id %>" class="card">
          <img src="<%= tournament.tournament_image %>" alt="<%= tournament.tournament_name %>">
          <div class="card-body">
            <div class="card-title"><%= tournament.tournament_name %></div>
            <div class="card-text"><%= tournament.tournament_info %></div>
          </div>
          <div class="card-footer">
            <div class="cost">â‚¹<%= tournament.tournament_cost %></div>
            <div class="timestamp"><%= tournament.timestamp %></div>
          </div>
        </a>
      <% }); %>
    </div>
  </main>

</body>
</html>
