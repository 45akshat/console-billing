                    <td colspan="8" style="text-align: right; font-weight: bold;">Totals:</td>
                    <td id="totalCash">0</td>
                    <td id="totalOnline">0</td>
                    <td id="totalWallet">0</td>
                    <td id="totalDiscount">0</td>
